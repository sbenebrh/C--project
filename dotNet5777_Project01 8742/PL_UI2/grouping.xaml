        mc:Ignorable="d"  
        Title="grouping_expert" WindowState="Maximized" Height="469.586" Width="886">
    <Grid>
        <Grid.Background>
            <ImageBrush x:Name="imagge"   ImageSource="images/stat1.jpg"  />
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="63*"/>
