            <ColumnDefinition Width="278*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="expert" Content="Contract by expert" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="70" Background="White" FontSize="18.667" FontWeight="Bold" Click="expert_Click" Margin="36,54,37,2" Grid.RowSpan="2"/>
